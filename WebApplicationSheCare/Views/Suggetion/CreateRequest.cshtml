@model IList<Suggetion>;

@section Css{
    <link href="~/css/frontend/suggetionrequest.css" rel="stylesheet" asp-append-version="true" />
}

<div class="display-1 mb-5">
    Suggestions
</div>

<form asp-controller="Suggetion" asp-action="CreateRequest" method="post">
    <div id="form-div">
        <table id="table" class="table table-responsive table-hover table-bordered table-danger">
            <thead class="table-light">
                <tr>
                    <th scope="col">
                        Symptom
                    </th>
                    <th scope="col">
                        Response
                    </th>
                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    @Html.HiddenFor(m => m[i].Id)
                    <tr>
                        <td>
                            @Html.DisplayFor(m => m[i].Question)
                        </td>
                        <td>
                            @Html.CheckBoxFor(m => m[i].IsActive)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary sub_btn" display="block">Find Suggetion</button>
    </div>
    
</form>