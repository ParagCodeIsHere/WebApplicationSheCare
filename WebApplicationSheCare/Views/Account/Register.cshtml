@model WebApplicationSheCare.Models.RegisterView
@{
    ViewBag.Title = "Register Yourself";
}
@* @section Css{
    <link href="~/css/frontend/register_user.css" rel="stylesheet" />
} *@

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row col-12">
                                <label asp-for="Password" class="form-label select-label"></label>
                                <input asp-for="Email" class="form-control-lg" />
                                <span asp-validation-for="Password" class="alert-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        <label asp-for="Password" class="form-label select-label"></label>
                                        <input asp-for="Password" class="form-control-lg" /><br /><br />
                                        <span asp-validation-for="Password" class="alert-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        <label asp-for="ConfirmPassword" class="form-label select-label"></label>
                                        <input asp-for="ConfirmPassword" class="form-control-lg" /><br /><br />
                                        <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 pt-2">
                                <button class="btn btn-primary btn-lg" type="submit">Get Registered!</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>